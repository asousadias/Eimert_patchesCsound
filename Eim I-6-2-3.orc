; Eimert ex 6.2.3-5: MOTIVO e Modulação em Anelsr	= 44100kr	= 441ksmps	= 100nchnls	= 1gaout	init	0; moduladorinstr 1idur	= p3ifm	= p4ifn	= p5kamp	linen	1, 0.01, p3, 0.05	; GE para evitar cliqueaout	oscili	kamp, ifm, ifngaout	= gaout + aoutendin; instrumento que realiza o motivoinstr 10idur	= p3iamp	= p4ifreq	= p5ifn	= p6ibal	= p7	; =0 s/ modulação,  =1 c/ modulaçãokamp	linen	iamp, 0.01, p3, 0.05	; GE para evitar cliqueaout	oscili	kamp, ifreq, ifnamod	= aout * gaout	out	(1-ibal)*aout  +  ibal*amodgaout	= 0endin